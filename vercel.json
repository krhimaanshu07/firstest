
{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist/public" }
    },
    {
      "src": "api/api.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/api.js" },
    { "src": "/(.*)",      "dest": "/$1" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
